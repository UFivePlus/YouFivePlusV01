<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="229dp"
        android:layout_height="237dp"
        android:contentDescription="Main Logo"
        app:layout_constraintBottom_toTopOf="@+id/emailTextInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/main_logo" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textColorHint="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@+id/passwordTextInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorWhite"></com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <!-- password Label -->


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="304dp"
        android:hint="Password"
        android:textColorHint="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/colorWhite">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:textColor="@color/colorWhite" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="30dp"
        android:layout_height="33dp"
        android:elevation="3dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/email_login_button2"
        app:layout_constraintEnd_toEndOf="@+id/email_login_button2"
        app:layout_constraintHorizontal_bias="0.171"
        app:layout_constraintStart_toStartOf="@+id/email_login_button2"
        app:layout_constraintTop_toTopOf="@+id/email_login_button2"
        app:srcCompat="@drawable/googleg_standard_color_18" />


    <Button
        android:id="@+id/amazon_button"
        android:layout_width="135dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshapedcolor4"
        android:gravity="right|center_vertical"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:text="Log In"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textViewForgotPassword"
        app:layout_constraintTop_toTopOf="@+id/apple_button" />

    <ImageView
        android:id="@+id/amazonLogo"
        android:layout_width="38dp"
        android:layout_height="36dp"
        android:elevation="3dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/amazon_button"
        app:layout_constraintEnd_toEndOf="@+id/amazon_button"
        app:layout_constraintHorizontal_bias="0.164"
        app:layout_constraintStart_toStartOf="@+id/amazon_button"
        app:layout_constraintTop_toTopOf="@+id/amazon_button"
        app:layout_constraintVertical_bias="0.458"
        app:srcCompat="@drawable/amazon_logo" />

    <ImageView
        android:id="@+id/fb_logo"
        android:layout_width="38dp"
        android:layout_height="36dp"
        android:elevation="3dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/facebook_button"
        app:layout_constraintEnd_toEndOf="@+id/facebook_button"
        app:layout_constraintHorizontal_bias="0.164"
        app:layout_constraintStart_toStartOf="@+id/facebook_button"
        app:layout_constraintTop_toTopOf="@+id/facebook_button"
        app:srcCompat="@drawable/facebook_logo" />

    <ImageView
        android:id="@+id/appleLogo"
        android:layout_width="38dp"
        android:layout_height="36dp"
        android:elevation="3dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/apple_button"
        app:layout_constraintEnd_toEndOf="@+id/apple_button"
        app:layout_constraintHorizontal_bias="0.185"
        app:layout_constraintStart_toStartOf="@+id/apple_button"
        app:layout_constraintTop_toTopOf="@+id/apple_button"
        app:layout_constraintVertical_bias="0.416"
        app:srcCompat="@drawable/apple_logo" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="72dp"
        android:layout_height="58dp"
        app:layout_constraintStart_toEndOf="@+id/email_login_button5"
        app:layout_constraintStart_toStartOf="@+id/facebook_button"
        app:layout_constraintTop_toTopOf="@+id/email_login_button5"
        app:srcCompat="@drawable/circle" />

    <Button
        android:id="@+id/facebook_button"
        android:layout_width="135dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshapedcolor3"
        android:gravity="right|center_vertical"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:text="Log In"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/amazon_button"
        app:layout_constraintTop_toTopOf="@+id/email_login_button2" />

    <Button
        android:id="@+id/email_login_button5"
        android:layout_width="135dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshapedcolor"
        android:padding="12dp"
        android:text="Log In"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/email_login_button2"
        app:layout_constraintStart_toStartOf="@+id/email_login_button2"
        app:layout_constraintTop_toBottomOf="@+id/passwordTextInputLayout" />

    <Button
        android:id="@+id/email_login_button2"
        android:layout_width="135dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshapedcolor"
        android:gravity="right|center_vertical"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:text="Log In"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/apple_button"
        app:layout_constraintStart_toStartOf="@+id/apple_button"
        app:layout_constraintTop_toBottomOf="@+id/email_login_button5" />

    <Button
        android:id="@+id/apple_button"
        android:layout_width="135dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshapedcolor"
        android:gravity="right|center_vertical"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:text="Log In"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/email_signup_button"
        app:layout_constraintStart_toStartOf="@+id/email_signup_button"
        app:layout_constraintTop_toBottomOf="@+id/email_login_button2" />

    <Button
        android:id="@+id/email_signup_button"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonshapedcolor2"
        android:padding="12dp"
        android:text="Register"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textViewForgotPassword"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/apple_button" />

    <ImageView
        android:id="@+id/finger_print_button"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:contentDescription="Finger Print"
        app:layout_constraintBottom_toBottomOf="@+id/imageView11"
        app:layout_constraintEnd_toEndOf="@+id/imageView11"
        app:layout_constraintStart_toStartOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="@+id/imageView11"
        app:srcCompat="@drawable/ic_fingerprint_white_24dp" />

    <!--        change padding for resize-->

    <!--    <com.google.android.gms.common.SignInButton-->
    <!--        android:id="@+id/sign_in_button"-->
    <!--        android:layout_width="101dp"-->
    <!--        android:layout_height="46dp"-->
    <!--        android:layout_marginTop="28dp"-->
    <!--        app:layout_constraintTop_toBottomOf="@+id/email_login_button"-->
    <!--        tools:layout_editor_absoluteX="32dp">-->

    <!--    </com.google.android.gms.common.SignInButton>-->

    <TextView
        android:id="@+id/textView15"
        android:layout_width="63dp"
        android:layout_height="26dp"
        android:text="Sign In with Fingerprint"
        android:textColor="@color/colorWhite"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView11"
        app:layout_constraintEnd_toEndOf="@+id/facebook_button"
        app:layout_constraintTop_toTopOf="@+id/imageView11"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textViewForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/email_signup_button"
        app:layout_constraintTop_toBottomOf="@+id/amazon_button" />


</androidx.constraintlayout.widget.ConstraintLayout>